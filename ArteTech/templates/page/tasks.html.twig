{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}

    <div class="heading_container">
        <h1>{{ title }}</h1>
        <a class="button-add" href="{{ path('add_task') }}">Taak Toevoegen</a>
    </div>

    <div class="table-container">
        <div class="card">
            <table>
                <tr>
                    <th>Datum</th>
                    <th>Uren</th>
                    <th>Werknemer</th>
                    <th>Klant</th>
                    <th>Opdracht</th>
                    <th>Details</th>
                </tr>
                {% for task in tasks %}
                    <tr>
                        <td>{{ task.date|date("D d/m/Y") }}</td>
                        <td>{{ task.startTime|date("H:i") }} - {{ task.endTime|date("H:i") }}</td>
                        <td>{{ task.employee.firstname}} {{ task.employee.lastname}}</td>
                        <td>{{ task.period.company.name}}</td>
                        <td>{{ task.period.name}}</td>
                        <td><a href="{{ path('task_detail', {id: task.id}) }}">Meer...</a></td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>

{% endblock %}
