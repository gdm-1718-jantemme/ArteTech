{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}

    <div class="heading_container">
        <h1>{{ title }}</h1>
        {% if userStatus == 'admin'%}
        <a class="button-add" href="{{ path('add_period') }}">Opdracht Toevoegen</a>
        {% endif %}
    </div>

    <div class="table-container">
        <div class="card">
            <table>
                <tr>
                    <th>Opdracht</th>
                    <th>Looptijd</th>
                    <th>Klant</th>
                    <th>Details</th>
                </tr>
                {% for period in periods %}
                    <tr>
                        <td>{{ period.name|capitalize }}</td>
                        <td>{{ period.startDate|date("d/m/Y") }} - {{ period.endDate|date("d/m/Y") }}</td>
                        <td>{{ period.company.name}}</td>
                        <td><a  class="button-add" href="{{ path('period_detail', {id: period.id}) }}">Meer...</a></td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>

{% endblock %}
