{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}

    <h1>{{ title }}</h1>

    <div class="table-container">
        <div class="card">
            <div class="heading_container">
                <h2>Account</h2>
                {% if userStatus == 'admin'%}
                <a class="button-add" href="{{ path('edit_user', {id: user.id}) }}">Info Aanpassen</a>
                {% endif %}
            </div>
            <div>
                <h3>Voornaam</h3>
                <p>{{ user.firstname }}</p>

                <h3>Achternaam</h3>
                <p>{{ user.lastname }}</p>

                <h3>Email</h3>
                <p>{{ user.email }}</p>

                <h3>Status</h3>
                <p>{{ user.status.status|capitalize }}</p>

                {% if user.status.status == 'freelancer'%}
                <h3>Uurloon</h3>
                <p>{{ user.hourlyRate.price }} {{ user.hourlyRate.unit }}</p>

                <h3>Transport Vergoeding</h3>
                <p>{{ user.transportRate.price }} {{ user.transportRate.unit }}</p>
                {% endif %}
            </div>
        </div>
    </div>

{% endblock %}
